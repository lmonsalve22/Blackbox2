    <input type="checkbox" id="cerrar" />
    <label for="cerrar" id="btn-cerrar">x</label>


    <div class="modal">
       
        <div class="contenido d-flex d-md-none">
            @*<div style="text-align:center;">

            <img class="img-fluid" width="300" src="~/Images/logo_dataintelligence_con_slogan.png" />
        </div>*@
            @*<iframe  style="width: 90vw; height: 95vh; border: 0; box-shadow: 5px 5px 56px 0px rgba(0,0,0,0.25);"></iframe>*@
            <amp-iframe width="940" height="1500" layout="responsive" style="width: 90vw; height: 95vh; border: 0; box-shadow: 5px 5px 56px 0px rgba(0,0,0,0.25);" sandbox="allow-scripts allow-same-origin allow-popups" resizable allowfullscreen frameborder="0" src="@ViewBag.url._comentario"><div style="visibility: hidden" overflow tabindex=0 role=button aria-label="Loading..." placeholder>Loading...</div></amp-iframe>

        </div>

    </div>


    <div class="container ">
        <div class="row justify-content-center">
            <div class="col-12" id="Iframe4">
                <amp-iframe width="940" height="1500" layout="responsive" sandbox="allow-scripts allow-same-origin allow-popups" resizable allowfullscreen frameborder="0" src="@ViewBag.url.url"><div style="visibility: hidden" overflow tabindex=0 role=button aria-label="Loading..." placeholder>Loading...</div></amp-iframe>
            </div>
        </div>
    </div>
</body>
</html>
