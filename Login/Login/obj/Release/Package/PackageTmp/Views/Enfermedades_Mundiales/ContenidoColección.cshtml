@{
    Layout = "~/Views/Shared/_LayoutEnfermedades_Mundiales.cshtml";
}

<!doctype html>
<html lang="es">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="~/Scripts/Usuario/Coleccion.js"></script>
    <script>
        function ActivarMenuSuperior3(opcionMenu) {
            $('.active5').removeClass('active5');
            $(opcionMenu).addClass("active5");
        }
    </script>
    <style>
        .active5 {
            background-color: #f6f6f6 !important;
        }
    </style>
    <title>Enfermedades Mundiales</title>
</head>
<body>
    <main class="container-fluid">
        <div class="row">
            <div class="col-sm-3  pb-sm-0 pb-3 d-none d-md-block" style="padding-left:0px !important;">
                <div class="border ulcolecciones">
                    <h6 class="h6colecciones">Contenido de la colección</h6>
                    <ul style="list-style:none; padding-left:0px !important;">
                        <li class="licolecciones">
                            <a onclick="CargarContenido('Asistencia'); ActivarMenuSuperior3(this);" class="nav-link px-2 text-truncate liacolecciones ">
                                <span class="lispancolecciones">Asistencia</span>
                            </a>
                        </li>
                        <li class="licolecciones">
                            <a onclick="CargarContenido('Diagnóstico'); ActivarMenuSuperior3(this);" class="nav-link px-2 text-truncate liacolecciones">

                                <span class="lispancolecciones">Diagnóstico</span>
                            </a>
                        </li>
                        <li class="licolecciones">
                            <a onclick="CargarContenido('Evolución COVID-19');ActivarMenuSuperior3(this);" class="nav-link px-2 text-truncate liacolecciones active5">

                                <span class=" lispancolecciones">Evolución COVID-19</span>
                            </a>
                        </li>
                        <li class="licolecciones">
                            <a onclick="CargarContenido('Evolución Vacunación');ActivarMenuSuperior3(this);" class="nav-link px-2 text-truncate liacolecciones">

                                <span class="lispancolecciones">Evolución Vacunación</span>
                            </a>
                        </li>
                        <li class="licolecciones">
                            <a onclick="CargarContenido('Paso a Paso');ActivarMenuSuperior3(this);" class="nav-link px-2 text-truncate liacolecciones">

                                <span class="lispancolecciones">Paso a Paso</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col overflow-auto mb-md-5">
                @*Dropdaown MENU PARA MOVIL*@
                <div class="conteiner-fluid d-block d-md-none">
                    <div class="row">
                        <div class="col-12 ddcolecciones">
                            <div class="dropdown ">
                                <a class="btn dropdown-toggle ddcolecciones" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                    Contenido de la colección
                                </a>
                                <ul class="dropdown-menu ddcolecciones" aria-labelledby="dropdownMenuLink">
                                    <li style="border-bottom:1px solid #d1d3de"><a onclick="CargarContenido('Asistencia');" class="dropdown-item btn btn-light ddhcolecciones">Asistencia</a></li>
                                    <li style="border-bottom:1px solid #d1d3de"><a onclick="CargarContenido('Diagnóstico');" class="dropdown-item btn btn-light ddhcolecciones">Diagnóstico</a></li>
                                    <li style="border-bottom:1px solid #d1d3de"><a onclick="CargarContenido('Evolución COVID-19');" class="dropdown-item btn btn-light ddhcolecciones">Evolución COVID-19</a></li>
                                    <li style="border-bottom:1px solid #d1d3de"><a onclick="CargarContenido('Evolución Vacunación');" class="dropdown-item btn btn-light ddhcolecciones">Evolución Vacunación</a></li>
                                    <li style="border-bottom:1px solid #d1d3de"><a onclick="CargarContenido('Paso a Paso');" class="dropdown-item btn btn-light ddhcolecciones">Paso a Paso</a></li>
                                    @*<li style="border-bottom:1px solid #d1d3de"><a onclick="CargarContenido('Evolución Vacunación');" class="dropdown-item btn btn-light ddhcolecciones">Evolución Vacunación</a></li>*@
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                @*FIN MENU PARA MOVIL*@
                <div>

                    <div id="bodyContenido" class="mb-5">
                        @*@{ Html.RenderAction("Tematica", "Data_Usuario");}*@

                    </div>
                </div>
            </div>
        </div>
            <div class="row justify-content-center" style="padding-top: 3%; padding-bottom: 1%; background-color: #C6CCDC; height: auto">
                <div class="col-12 col-md-3 mt-3 text-center">
                    <!--Buscador -->
                    <form action="~/Enfermedades_Mundiales/PaginaBusqueda" method="get" class="mt-3 mt-md-0">
                        <input type="text" id="id" name="id" placeholder="Busqueda de palabras claves" style="padding: 6px; border: none; border-top-left-radius: 3px; border-bottom-left-radius: 3px;">
                        <button id="search-button" type="submit" value="Submit" class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
                <div class="col-12 col-md-3 text-center mt-2 mt-md-1">
                    <h4 style="color:black; font-size:1.2rem;"><b>¡Explora, busca y encuentra!</b></h4>
                    <p>todo nuestro universo de datos</p>
                </div>
                <div class="col-12 mb-3 col-md-3 text-center ">
                    <img class="img-fluid" src="~/Content/img/negro-rojo-trans - copia.png" alt="" />
                </div>
            </div>


    </main>
    <script>
        function CargarContenido(id) {
            $('#bodyContenido').html('<h2>Cargando Información...espere un momento por favor</h2>')
            $.ajax(
                {
                    type: 'POST',
                    data: "{'id':" + "'" + id + "'}", //datos o parametros enviados al servidor
                    dataType: 'html', //el tipo de dato que nos regresara el servidor en este caso regresa html
                    url: '/Enfermedades_Mundiales/parcialColeccion?contenido=' + id,
                    //URL del action result que cargara la vista parcial
                    success: function (result) {
                        // si la funcion se ejecuta lanzara un alert
                        //cuando se ejecuta bien la funcion agregara al div vistaParcial el contenido
                        //que recibio del servidor
                        $("#bodyContenido").html(result);
                    },
                    error: function (error) {
                        // si hay un error lanzara el mensaje de error
                        $("#bodyContenido").html('<h2>No hemos encontrado gráficos relacionados</h2>');
                    }
                });
        }
        CargarContenido("Evolución COVID-19")
        ActivarMenuSuperior("#Enfermedades_ContenidoColeccion");
    </script>

</body>
</html>












