@model Login.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "¿Olvidó la contraseña?";
    Layout = "~/Views/Shared/_LayoutPublico.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<body>
    <div class="container" style="height:500px">
        <div class="row justify-content-center">
            <h2 class="text-center" style="margin-bottom:5%; margin-top:5%;">@ViewBag.Title</h2>

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <h4 style="margin-top:5%;">Especifique su correo electrónico.</h4>
                    <div class="col-md-10 text-center">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control text-center" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 mt-3 mb-3">
                        <input type="submit" class="btn btn-primary" value="Enviar" />
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script>
        ActivarMenuSuperior4("#public_dataAcceso")
    </script>
</body>