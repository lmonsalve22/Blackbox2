@{
    ViewBag.Title = "Visualizador";
    Layout = "~/Views/Shared/_LayoutPublico.cshtml";
}
<script>
        var device = navigator.userAgent
        if (device.match(/Iphone/i) || device.match(/Ipod/i) || device.match(/Android/i) || device.match(/J2ME/i) || device.match(/BlackBerry/i) || device.match(/iPhone|iPad|iPod/i) || device.match(/Opera Mini/i) || device.match(/IEMobile/i) || device.match(/Mobile/i) || device.match(/Windows Phone/i) || device.match(/windows mobile/i) || device.match(/windows ce/i) || device.match(/webOS/i) || device.match(/palm/i) || device.match(/bada/i) || device.match(/series60/i) || device.match(/nokia/i) || device.match(/symbian/i) || device.match(/HTC/i)) {
            window.location = '/Contenido/VisualizadorAMP/@ViewBag.id';
        }
    </script>
<div class="container-fluid  d-block d-md-none" style="background-color:#343A40">
    <div class="row justify-content-center">
        <div class="col-12">
            <!-- 16:9 aspect ratio -->
            <div class="embed-responsive embed-responsive-16by9" id="IframeTest2">
                <iframe class="embed-responsive-item" src="@ViewBag.url.url"></iframe>
            </div>
        </div>
    </div>
</div>
<style>
    .modal {
        width: 100%;
        height: 150vh;
        background-color: rgb(0,0,0,0.8);
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        animation: modal 2s 3s forwards; /*2s duracion de la animacion ,3s retraso desde que se carge la pagina para ver la animacion y el forward para quede en la pantalla*/
        /*animation-fill-mode:forwards;*/
        visibility: hidden;
        opacity: 0;
    }

    .contenido {
        margin-top: 20px !important;
        margin: auto;
        background-color: white;
        border-radius: 10px;
    }

    #cerrar {
        display: none;
    }

        #cerrar + label {
            top: 20px;
            position: fixed;
            color: #fff;
            font-size: 25px;
            z-index: 9999;
            background-color: darkred;
            height: 40px;
            width: 40px;
            line-height: 40px;
            border-radius: 50%;
            padding-left: 14px;
            right: 20px;
            cursor: pointer;
            animation: modal 2s 3s forwards;
            visibility: hidden;
            opacity: 0;
        }

    @@media (min-width: 768px) {
        #cerrar + label {
            display: none;
        }

        #btn-cerrar {
            display: none;
        }
    }

    #cerrar:checked + label, #cerrar:checked ~ .modal {
        display: none;
    }

    #Iframe4 {
        width: 100%;
        height: 120vh;
    }

    @@keyframes modal {
        100% {
            visibility: visible;
            opacity: 1;
        }
    }
</style>

<input type="checkbox" id="cerrar" />
<label for="cerrar" id="btn-cerrar">x</label>

<div class="modal d-block d-md-none">
    <!--<div class="contenido d-none d-md-block">-->
    @*<div style="text-align:center;">

            <img class="img-fluid" width="300" src="~/Images/logo_dataintelligence_con_slogan.png" />
        </div>*@

    <!--<iframe src="@ViewBag.url._comentario" style="width: 30vw; height: 80vh; border: 0; box-shadow: 5px 5px 56px 0px rgba(0,0,0,0.25);"></iframe>
    </div>-->
    <div class="contenido d-flex d-md-none">
        @*<div style="text-align:center;">

                <img class="img-fluid" width="300" src="~/Images/logo_dataintelligence_con_slogan.png" />
            </div>*@
        <iframe src="@ViewBag.url._comentario" style="width: 90vw; height: 95vh; border: 0; box-shadow: 5px 5px 56px 0px rgba(0,0,0,0.25);"></iframe>
    </div>
</div>

<div class="container-fluid d-none d-md-block mb-md-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8  embed-responsive embed-responsive-16by9" id="Iframe4">
            <!-- 16:9 aspect ratio -->
            @*<div class="embed-responsive embed-responsive-16by9" id="IframeTest">*@
            <iframe id="Iframe4" class="embed-responsive-item mt-md-5 pb-5" src="@ViewBag.url.url"></iframe>
            @*</div>*@
        </div>

        <div class="col-md-3 d-none d-md-flex mt-5" style="margin-top:4% !important;">
            @*<div style="text-align:center;">

                    <img class="img-fluid" width="300" src="~/Images/logo_dataintelligence_con_slogan.png" />
                </div>*@

            <iframe src="@ViewBag.url._comentario" style="width: 30vw; height: 85vh;"></iframe>
