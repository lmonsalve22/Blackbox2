@using Login.Models
@model LoginViewModel
@{
    ViewBag.Title = "Suscripciones";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}

<div class="container mb-1">
    <div class="row justify-content-center mt-md-5">
        <div class="col-md-3">
            <img class="img-fluid" src="~/Content/Imagenes agencia_Informacion/iconocuentaprofesional_nuevo.png" />
        </div>
    </div>
    <div class="row justify-content-center mt-5 md-5">
        <div class="col-md-8">
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <h4>
                    <B>Bienvenido @ViewBag.User a tu suscripción cuenta profesional</B>
                </h4>
            }
        </div>
        <div class="col-md-4">
            <a class="btn btn-danger" href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a>
        </div>
        <hr />
    </div>
</div>
